
@{
	Layout = null; // Không sử dụng layout
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Đăng nhập</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
		  integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
	<style>
        body {
            background: url('/Images/bgr_decor.jpg');
            background-size: cover;
            background-position-y: -50px;
        }

        .dangnhap {
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .frmdangnhap {
            max-width: 400px;
            background: rgba(0,0,0,0.8);
            flex-grow: 1;
            padding: 30px 30px 40px;
            box-shadow: 0px 0px 20px 2px rgba(245, 241, 241, 0.8);
            border-radius: 10px;
        }

        .title {
            font-size: 25px;
            color: #f5f5f5;
            text-align: center;
            margin-bottom: 30px;
        }

        .nhom {
            border-bottom: 1px solid #fff;
            margin-top: 15px;
            margin-bottom: 15px;
            display: flex;
            flex-grow: 1;
        }

        .nhap {
            background: transparent;
            border: 0;
            outline: 0;
            color: #f5f5f5;
        }

            .nhap::placeholder {
                color: #f5f5f5;
            }

        .btndangnhap {
            background: transparent;
            border: 1px solid #f5f5f5;
            color: #fff;
            width: 50%;
            text-transform: uppercase;
            padding: 6px 10px;
            transition: 0.25s ease-in-out;
            margin-top: 20px;
        }

            .btndangnhap:hover {
                border: 1px solid #54a0ff;
            }

        svg {
            margin-top: 5px;
            margin-right: 10px;
        }

        a {
            text-decoration: none;
            color: #fff;
        }

        .dangky:hover {
            color: red;
            transition: 0.25s ease-in-out;
        }

        .dangky {
            font-style: italic;
            margin-left: 228px;
        }
	</style>
</head>
<body>
	<div class="dangnhap">
        <form asp-action="DangNhap" class="frmdangnhap" enctype="multipart/form-data">
			<h1 class="title">Đăng nhập</h1>
			<div class="nhom">
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16" style="color: aliceblue;">
					<path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
					<path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
				</svg><input type="text" class="nhap" placeholder="Tên đăng nhập" name="user">
			</div>
			<div class="nhom">
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-key" viewBox="0 0 16 16" style="color: aliceblue;">
					<path d="M0 8a4 4 0 0 1 7.465-2H14a.5.5 0 0 1 .354.146l1.5 1.5a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0L13 9.207l-.646.647a.5.5 0 0 1-.708 0L11 9.207l-.646.647a.5.5 0 0 1-.708 0L9 9.207l-.646.647A.5.5 0 0 1 8 10h-.535A4 4 0 0 1 0 8zm4-3a3 3 0 1 0 2.712 4.285A.5.5 0 0 1 7.163 9h.63l.853-.854a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.793-.793-1-1h-6.63a.5.5 0 0 1-.451-.285A3 3 0 0 0 4 5z" />
					<path d="M4 8a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
				</svg><input type="password" class="nhap" placeholder="Mật khẩu" name="password">
			</div>
            <p style="color:red">@ViewBag.ThongBao</p>
			<div>
				<a href="" class="dangky">Đăng ký ngay!!!</a>
			</div>
            <center><input type="submit" value="Đăng nhập" class="btndangnhap" /></center>
        </form>
	</div>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous">
	</script>
</body>
</html>